# .env.example - Copy to `.env` and fill in values. Do NOT commit your real `.env` to version control.

# App
DEBUG=true
APP_NAME=YOUR_APP_NAME

# DB settings
DB_TYPE=sqlite  # or 'postgres'
# When using postgres, set the following:
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=test

# SQLite path (when DB_TYPE=sqlite)
SQLITE_DB_PATH=./data/db.sqlite3

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
AUTH_REDIS_DB=0
CACHE_REDIS_DB=1

# JWT secret (set a long random string in production)
JWT_SECRET=change_me_to_a_strong_secret
# JWT algorithm and expiry (optional)
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
